{
  "name": "@e22m4u/js-http-file-uploader",
  "version": "0.0.3",
  "description": "Подключаемый сервис загрузки файлов для JavaScript",
  "author": "Mikhail Evstropov <e22m4u@yandex.ru>",
  "license": "MIT",
  "keywords": [
    "file",
    "upload",
    "storage"
  ],
  "homepage": "https://github.com/e22m4u/js-http-file-uploader",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/e22m4u/js-http-file-uploader.git"
  },
  "type": "module",
  "types": "./dist/esm/index.d.ts",
  "module": "./dist/esm/index.js",
  "main": "./dist/cjs/index.cjs",
  "exports": {
    "types": "./dist/esm/index.d.ts",
    "import": "./dist/esm/index.js",
    "require": "./dist/cjs/index.cjs"
  },
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "build:esm": "tsc --build",
    "build:cjs": "rimraf ./dist/cjs && node --no-warnings=ExperimentalWarning build-cjs.js",
    "build": "rimraf dist && npm run build:esm && npm run build:cjs",
    "postbuild": "rimraf ./dist/**/*.spec.* --glob ./dist/tsconfig.tsbuildinfo",
    "lint": "eslint ./src",
    "lint:fix": "eslint ./src --fix",
    "format": "prettier --write \"./src/**/*.ts\"",
    "test": "npm run lint && c8 --reporter=text-summary mocha --bail",
    "test:coverage": "npm run lint && c8 --reporter=text mocha --bail",
    "prepare": "husky"
  },
  "dependencies": {
    "@e22m4u/js-format": "~0.2.0",
    "@e22m4u/js-localizer": "~0.2.1",
    "@e22m4u/js-service": "~0.4.3",
    "file-type": "~21.0.0",
    "formidable": "~3.5.4",
    "http-errors": "~2.0.0",
    "sharp": "~0.34.4"
  },
  "devDependencies": {
    "@commitlint/cli": "~20.1.0",
    "@commitlint/config-conventional": "~20.0.0",
    "@eslint/js": "~9.38.0",
    "@types/chai": "~5.2.3",
    "@types/formidable": "~3.4.6",
    "@types/http-errors": "~2.0.5",
    "@types/mocha": "~10.0.10",
    "@types/node": "~24.9.1",
    "c8": "~10.1.3",
    "chai": "~6.2.0",
    "esbuild": "~0.25.11",
    "eslint": "~9.38.0",
    "eslint-config-prettier": "~10.1.8",
    "eslint-plugin-chai-expect": "~3.1.0",
    "eslint-plugin-mocha": "~11.2.0",
    "globals": "~16.4.0",
    "husky": "~9.1.7",
    "mocha": "~11.7.4",
    "prettier": "~3.6.2",
    "rimraf": "~6.0.1",
    "tsx": "~4.20.6",
    "typescript": "~5.9.3",
    "typescript-eslint": "~8.46.2"
  }
}
